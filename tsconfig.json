{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": ["scripts", "test", "hardhat.config.ts"],
  "exclude": ["dist", "node_modules"]
}
